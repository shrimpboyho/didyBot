{
  "manifest_version": 2,

  "name": "didyBot",
  "description": "A Chrome Extension Bot",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },


   "browser_action": {
    "default_icon": {                    // optional
      "19": "icon.png",           // optional
      "38": "icon.png"            // optional
    },
    
    "default_title": "Didy Bot"     
            
   },

  "permissions": [
     "tabs", "http://*/*", "https://*/*"
  ]
}
